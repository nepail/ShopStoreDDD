@{
    Layout = null;
    ViewData["Title"] = "管理後台";
}

<!DOCTYPE html>
<html>
<head>
    <title>ShopStore 後台管理系統</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="~/lib/bootstrap-sweetalert/sweetalert.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/Manager/Home/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" />

</head>
<body>
    <img class="wave" src="~/img/svg/wave.svg" />
    <div class="container">
        <div class="img">
            <img src="~/img/svg/undraw_software_engineer_re_fyew.svg" />
        </div>

        <div class="login-container">
            <form asp-action="Login">
                <h2>Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h5>帳號</h5>
                        <input name="Account" class="input" type="text" />
                    </div>
                </div>

                <div class="input-div two">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>密碼</h5>
                        <input name="Pcode" class="input" type="password" />
                    </div>
                </div>
                <input type="submit" class="btn" value="登入" />
            </form>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="~/js/Manager/Home/index.js" asp-append-version="true"></script>
</body>
</html>